<% layout('/layouts/boilerplate') %>

    <br>
    <div class="row mt-3">
        <h1 class="col-8 offset-2">SignUp on Wanderlust</h1>
        <div class="col-8 offset-2">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input required type="text" class="form-control" name="username" id="username" placeholder="">
                    <div class="valid-feedback"> Looks Good</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input required type="email" class="form-control" name="email" id="email" placeholder="">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input required type="password" class="form-control" name="password" id="password" >
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>